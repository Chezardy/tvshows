{% extends 'AppBundle::layout.html.twig' %}

{% block menu_calendar %}active{% endblock %}

{% block contents %}
    <section>
    	<div class="container">
    		<h3>Prochaines diffusions</h3>
            <div class="row">
                {% for episode in episodes %}
                    <div  class="col-sm-12">
                        <h4>{{ episode.season.show.name }} | S{{ episode.season.number }} - Ep{{ episode.number }} - "{{ episode }}" - {{ episode.date|date("d/m/Y") }}</h4>
                    </div>
                {% endfor %}
            </div>
    	</div>
    </section>
{% endblock %}